{
  "name": "your_app_name",
  "private": true,
  "version": "1.0.0",
  "main": "dist_app/app.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",

    "electron:start": "tsc && electron .",
    "electron:dir": "tsc && electron-builder --dir",
    "electron:dist": "tsc && electron-builder",

    "app:serve": "tsc && concurrently vite \"wait-on tcp:3000\" \"electron .\"",
    "app:build": "tsc && vue-tsc --noEmit && vite build && electron-builder"
  },
  "dependencies": {
    "vue": "^3.2.25"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^2.2.0",
    "electron": "^17.1.2",
    "electron-builder": "^22.14.13",
    "typescript": "^4.5.4",
    "vite": "^2.8.0",
    "vue-tsc": "^0.29.8",
    "concurrently": "^7.0.0",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "cn.giteasy",
    "directories": {
      "output": "dist_electron"
    }
  }
}
